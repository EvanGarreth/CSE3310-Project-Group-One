<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/colorRed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20dp"
            android:text="Event Details"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/party_size_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Party Size:"
            android:textColor="#fff"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Date:"
            android:textColor="#fff"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Time:"
            android:textColor="#fff"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/duration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Duration:"
            android:textColor="#fff"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/meal_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Meal Type:"
            android:textColor="#fff"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/venue_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Venue Type:"
            android:textColor="#fff"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/formality_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Formality:"
            android:textColor="#fff"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/drink_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Drink Venue:"
            android:textColor="#fff"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/cancel_event_user"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:text="Cancel Event"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:background="@color/colorOrange"/>
            <Button
                android:id="@+id/event_details_back_user"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:text="Back"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:background="@color/colorOrange"/>

        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>